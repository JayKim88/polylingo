{
  "expo": {
    "name": "PolyLingo",
    "slug": "polylingo",
    "version": "1.0.4",
    "orientation": "portrait",
    "icon": "./assets/images/polylingo.png",
    "scheme": "polylingo",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "backgroundColor": "#000000",
      "resizeMode": "contain"
    },
    "androidStatusBar": {
      "backgroundColor": "#000000"
    },
    "platforms": ["ios"],
    "ios": {
      "backgroundColor": "#000000",
      "icon": "./assets/images/polylingo.png",
      "infoPlist": {
        "SKAdNetworkItems": [
          {
            "SKAdNetworkIdentifier": "cstr6suwn9.skadnetwork"
          }
        ],
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to allow you to select and upload images.",
        "NSCameraUsageDescription": "This app needs access to your camera to allow you to take photos for translation or profile images.",
        "NSMicrophoneUsageDescription": "This app needs access to your microphone for voice input and speech recognition.",
        "NSSpeechRecognitionUsageDescription": "This app uses speech recognition to convert your voice to text for translation."
      },
      "bundleIdentifier": "com.polylingo.app"
    },
    "android": {
      "icon": "./assets/images/polylingo.png",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/polylingo.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.polylingo.app",
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-web-browser",
      "@react-native-voice/voice",
      [
        "react-native-google-mobile-ads",
        {
          "androidAppId": "ca-app-pub-3940256099942544~3347511713",
          "iosAppId": "ca-app-pub-6672773689491522~1869942211"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "owner": "koriwan",
    "extra": {
      "router": {},
      "eas": {
        "projectId": "68622704-5cd7-4eee-b043-450a21a64622"
      },
      "EXPO_ROUTER_APP_ROOT": "./app"
    }
  }
}
